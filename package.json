{
  "name": "crms-template",
  "version": "1.0.0",
  "description": "CRMS Template - Responsive Bootstrap 5 Admin Dashboard",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:scss && npm run build:pug && npm run copy:assets",
    "build:scss": "sass src/public/scss/style.scss src/public/css/style.css --style=compressed",
    "build:pug": "npx pug src/views --out html --pretty",
    "watch": "npm run watch:scss & npm run watch:pug",
    "watch:scss": "sass src/public/scss/style.scss src/public/css/style.css --watch --style=compressed",
    "watch:pug": "npx pug src/views --out html --watch --pretty",
    "dev": "npm run watch",
    "copy:assets": "cp -r src/public/* client/",
    "clean": "rm -rf html/* client/* && rm -f src/public/css/style.css",
    "start": "npm run build"
  },
  "keywords": [
    "pug",
    "scss",
    "bootstrap",
    "admin",
    "dashboard",
    "template"
  ],
  "author": "Dreams Technologies",
  "license": "MIT",
  "devDependencies": {
    "pug": "^3.0.2",
    "sass": "^1.69.5"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "jquery": "^3.7.1"
  }
}
