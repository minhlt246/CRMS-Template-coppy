    .modal-dialog.modal-lg
        .modal-content.bg-transparent
            .card.shadow-none.mb-0
                .px-3.py-2.d-flex.flex-row.align-items-center#search-top
                    i.ti.ti-search.fs-22
                    input.form-control.border-0(type="search" placeholder="Search")
                    button.btn.p-0(type="button" data-bs-dismiss="modal" aria-label="Close")
                        i.ti.ti-x.fs-22    
