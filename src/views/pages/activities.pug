extends ../_layouts/master

block content
  .activities-page
    // Activities Page Header
    .page-header
      .container-fluid
        .row
          .col-12
            h1.page-title Activities
            p.page-description Manage and track all activities
    
    // Activities Filter Section
    .activities-filter
      .container-fluid
        .filter-row
          .filter-group
            label(for="dateRange") Date Range
            input#dateRange.form-control.flatpickr-input(type="text" placeholder="Select date range")
          .filter-group
            label(for="statusFilter") Status
            select#statusFilter.form-control
              option(value="") All Status
              option(value="active") Active
              option(value="completed") Completed
              option(value="pending") Pending
          .filter-group
            label(for="categoryFilter") Category
            select#categoryFilter.form-control
              option(value="") All Categories
              option(value="meeting") Meeting
              option(value="call") Call
              option(value="email") Email
              option(value="task") Task
          .filter-group
            label(for="searchInput") Search
            input#searchInput.form-control(type="text" placeholder="Search activities...")
          .filter-group
            button.btn.btn-primary Search
            button.btn.btn-secondary Reset
    
    // Activities Content
    .container-fluid
      .row
        .col-12
          .activities-content
            // Activities Table
            .table-responsive
              table#activitiesTable.table.table-striped.table-hover
                thead
                  tr
                    th ID
                    th Title
                    th Category
                    th Status
                    th Date
                    th Actions
                tbody
                  tr
                    td 001
                    td Team Meeting
                    td Meeting
                    td
                      span.badge.bg-success Active
                    td 2024-01-15
                    td
                      .btn-group
                        button.btn.btn-sm.btn-outline-primary Edit
                        button.btn.btn-sm.btn-outline-danger Delete
                  tr
                    td 002
                    td Client Call
                    td Call
                    td
                      span.badge.bg-warning Pending
                    td 2024-01-16
                    td
                      .btn-group
                        button.btn.btn-sm.btn-outline-primary Edit
                        button.btn.btn-sm.btn-outline-danger Delete
                  tr
                    td 003
                    td Email Follow-up
                    td Email
                    td
                      span.badge.bg-success Completed
                    td 2024-01-17
                    td
                      .btn-group
                        button.btn.btn-sm.btn-outline-primary Edit
                        button.btn.btn-sm.btn-outline-danger Delete
            
            // Rich Text Editor for Notes
            .mt-4
              label(for="activityNotes") Activity Notes
              #activityNotes.ql-editor
                p Enter your notes here...
    
    // Page-specific CSS
    style.
      /* Import page-specific CSS */
      @import url('../../public/scss/pages/activities.css');
    
    // Page-specific JavaScript
    script.
      // Initialize page-specific plugins
      $(document).ready(function() {
        // Initialize DataTables
        $('#activitiesTable').DataTable({
          responsive: true,
          pageLength: 10,
          order: [[4, 'desc']]
        });
        
        // Initialize Flatpickr
        flatpickr("#dateRange", {
          mode: "range",
          dateFormat: "Y-m-d"
        });
        
        // Initialize Choices.js
        new Choices('#statusFilter');
        new Choices('#categoryFilter');
        
        // Initialize Select2
        $('#searchInput').select2({
          placeholder: 'Search activities...',
          allowClear: true
        });
        
        // Initialize Quill
        var quill = new Quill('#activityNotes', {
          theme: 'snow',
          modules: {
            toolbar: [
              ['bold', 'italic', 'underline'],
              ['link', 'blockquote'],
              [{ 'list': 'ordered'}, { 'list': 'bullet' }],
              ['clean']
            ]
          }
        });
      });
